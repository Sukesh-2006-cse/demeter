# Expo Environment Variables
# These variables will be available in the app as process.env.EXPO_PUBLIC_*

# Backend API URL - change this to match your backend deployment
EXPO_PUBLIC_API_URL=http://localhost:5000

# For development on physical device, use your computer's IP address instead of localhost
# Example: EXPO_PUBLIC_API_URL=http://192.168.1.100:5000

# For production deployment
# EXPO_PUBLIC_API_URL=https://your-backend-domain.com

# App Configuration
EXPO_PUBLIC_APP_NAME=Demeter
EXPO_PUBLIC_APP_VERSION=1.0.0

# Features
EXPO_PUBLIC_ENABLE_VOICE=true
EXPO_PUBLIC_ENABLE_OFFLINE=true
EXPO_PUBLIC_ENABLE_CAMERA=true

# Debug settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info